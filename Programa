
def menu_inicial():
    print('')
    print('Controle de estoque')
    print('0 - Sair')
    print('1 - Adicionar item')
    print('2 - Remover item')
    print('3 - Alterar item')
    print('4 - Imprimir estoque')
    print('5 - Voltar')
    menu = int(input('Faça sua escolha: '))
    return menu


estoque = {}

menu = menu_inicial()
if menu != 0:
    while menu != 0:
        if menu == 1:
            produto = input('Nome do Produto: ')
            if produto not in estoque:
            estoque[produto] = {}
                quant = int(input('Quantidade Inicial: '))
                while quant < 0:
                    print('Quantidade Inicial não pode ser negativa')
                    quant = intinput('Quantidade Inicial: '))
                estoque[produto]['quantidade'] = {quant}
            else:
                print('Produto já cadastrado')
        
        if menu == 2:
            produto = input('Produto a ser deletado: ')
            while produto not in estoque:
                print('Produto não encontrado')
                produto = input('Produto a ser deletado: ')
            del estoque[produto]
            print('Produto deletado')

        if menu == 3:
            produto = input('Nome do Produto: ')
            if produto in estoque:
                quant = input('Quantidade: ')
                estoque[produto] = str(int(estoque[produto]) +  int(quant))
                print('Novo estoque de {0}: {1}'.format(produto,estoque[produto]))
            
        if menu == 4:
            print(estoque)
            for produto in estoque:        
                print("{0}: {1}\n".format(produto, estoque[produto]))
            
        if menu ==5:
            produto = input('Mudar preço de qual produto: ')
            if produto in estoque:
               estoque[produto]['preco']  = {float(input('Novo preço: '))}
                
                print('Mudança efetuada com sucesso')
            else:
                print('Produto não encontrado')

        menu = menu_inicial()

print('Até mais')
